<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/custom_loading_screen.css" />
	</styles>

	<!-- You can include other stuff besides styles like javascript. for example below:
	<scripts>
    	<include src="file://{resources}/scripts/custom_loading_screen.js" /> 
  	</scripts>
