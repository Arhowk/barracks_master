	<Panel class="BMLoadingRoot">

		<Panel id="BM_Backgrounds">
			<Image id="BG_Main" src="file://{images}/custom_game/loading_screen/bm_loading_screen.psd" />
			<Image id="BG_Sides" src="file://{images}/custom_game/loading_screen/background_sides.png"/>
			<Image id="BG_TopLeft" src="file://{images}/custom_game/loading_screen/background_top_left.png"/>	
			<Label id="GameTitle" text="#addon_game_name" style="" />		
		</Panel>

		<Panel id="BM_Updates">
			<Label id="UpdatesTitle" text="#bm_updates_title" style="" />
			<Label id="Updates" text="#bm_updates_text" style="" />
			<Label id="Contact" text="#bm_contact_text" style="" />
		</Panel>

		<Panel id="BM_Tutorials" >
			<Image id="T1" src="file://{images}/custom_game/loading_screen/bm_loading_screen_n1.psd" />
			<Image id="T2" src="file://{images}/custom_game/loading_screen/bm_loading_screen_n2.psd" />
			<Image id="T3" src="file://{images}/custom_game/loading_screen/bm_loading_screen_p3.psd" />
			<Image id="T4" src="file://{images}/custom_game/loading_screen/bm_loading_screen_p4.psd" />
		</Panel>

	</Panel>
</root>
